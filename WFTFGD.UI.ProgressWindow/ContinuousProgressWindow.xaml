<Window x:Class="WFTFGD.UI.ProgressWindow.ContinuousProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        Background="White"
        ShowInTaskbar="False"
        BorderBrush="Green"
        BorderThickness="2"
        Topmost="True"
        Height="70" Width="500" ResizeMode="NoResize" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="72"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Image Grid.RowSpan="2"
               Width="64"
               Height="64"
               Source="Images\googleDriveWhiteBlack.png" />
        <ProgressBar
            IsIndeterminate="True"
            Margin="5"
            Grid.Column="1"/>
        <TextBlock Name="txtProcessName"
                   Text="Process Description Goes Here"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Grid.Column="1"
                   Grid.Row="1"/>
    </Grid>
</Window>
